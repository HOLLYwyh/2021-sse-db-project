<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/Home/index/index.css" type="text/css" rel="stylesheet" />
    <link href="~/css/Common/common.css" type="text/css" rel="stylesheet" />
    <link href="~/css/Common/shortcut_five.css" type="text/css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/Home/index/carousel.css" type="text/css">
    <link href="~/css/Home/index/animate.css" type="text/css" rel="stylesheet" />
    <link href="~/css/Home/index/part.css" type="text/css" rel="stylesheet" />
    <script type="text/javascript" src="~/js/Common/vue.js"></script>

    <link href="~/css/Common/naviRight.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://www.jq22.com/jquery/font-awesome.4.7.0.css">

    <title>欢迎来到英豪荟萃~</title>
    @await Html.PartialAsync("~/Views/Shared/base.cshtml")
    @await Html.PartialAsync("~/Views/Shared/backToTop.cshtml")
</head>
<body>
    <div id="lift">
        <ul>
            <li class="item"><a href="#part1"><div>服装</div></a></li>
            <li class="item"><a href="#part2"><div>电子</div></a></li>
            <li class="item"><a href="#part3"><div>书籍</div></a></li>
            <li class="item"><a href="#part4"><div>宠物</div></a></li>
            <li class="item"><a href="#part5"><div>运动</div></a></li>
            <li class="item"><a href="#part6"><div>食品</div></a></li>
            <li class="item"><a href="#part7"><div>家居</div></a></li>
            <li class="item"><a href="#part8"><div>美妆</div></a></li>
            <li class="item"><a href="#part9"><div>洗护</div></a></li>
        </ul>
    </div>
    
    <div id="naviRight">
        <naviright>

        </naviright>
    </div>
    <div id="shortcut">
        <shortcut></shortcut>
    </div>
    <div class="search">
        <div class="fl huicui">
            <img src="~/Images/Home/index/yinghaohuicui.png">
        </div>
        <div>
            <input type="text" placeholder="关键词搜索" class="fl">
        </div>
        <button class="fl" onclick="window.location.href = '/Search/SearchCommodity'"></button>
        <div class="nav fr">



            <div class="nav_son login">
                <img src="/Images/Home/index/u64.svg">
                <div id="utility1">
                    <a href="/Entry/BuyerLogIn" class="fl">登录</a>
                    <p class="fl">|</p>
                    <a href="/Entry/BuyerSignUp" class="fl">注册</a>
                </div>
            </div>

            <div class="nav_son">
                <img src="~/Images/Home/index/shoppingcart.svg" alt="">
                <a href="#">购物车</a>
            </div>
            <div class="nav_son">
                <img src="~/Images/Home/index/notice.svg" alt="">
                <a href="#">通知</a>
            </div>
            <div class="nav_son">
                <img src="~/Images/Home/index/bro_history.svg" alt="">
                <a href="#">浏览记录</a>
            </div>
            <div class="nav_son">
                <img src="~/Images/Home/index/bookmark.svg" alt="">
                <a href="/Favorites/Favorite">收藏夹</a>
            </div>
            <div class="nav_son">
                <img src="~/Images/Home/index/orders.svg" alt="">
                <a href="#">历史订单</a>
            </div>
            <div class="nav_son">
                <img src="~/Images/Home/index/coupon.svg" alt="">
                <a href="#">优惠券</a>
            </div>

        </div>
    </div>
    <div class="different_kind">
        <img src="~/Images/Home/index/indextop.png" alt="Alternate Text" />
    </div>
    <div class="recommend">
        <div id="carousel1">
            <carousel class="carousel1"></carousel>
        </div>
        <div class="rcmd_box">
            <ul>
                <li v-for='(thing,index) in goods' :key='index'>
                    <!--<a>-->
                        <img :src="thing.img">
                        <div class="introduce">

                            {{thing.intro}}

                        </div>
                        <div class="shop">
                            店铺：{{thing.shop}}
                        </div>
                    <!--</a>-->
                </li>
            </ul>
            <div class="change_btn" onclick="getRcmd()">

                换一换
            </div>
        </div>
    </div>

    <div id="part1">
        <part type="服装"></part>
    </div>
    <div id="part2">
        <part type="电子产品"></part>
    </div>
    <div id="part3">
        <part type="书籍"></part>
    </div>
    <div id="part4">
        <part type="宠物"></part>
    </div>
    <div id="part5">
        <part type="运动"></part>
    </div>
    <div id="part6">
        <part type="食品"></part>
    </div>
    <div id="part7">
        <part type="家居"></part>
    </div>
    <div id="part8">
        <part type="美妆"></part>
    </div>
    <div id="part9">
        <part type="洗护"></part>
    </div>


    <script type="text/javascript" src="~/js/Home/index/part.js"></script>
    <script type="text/javascript" src="~/js/Common/carousel.js"></script>
    <script type="text/javascript" src="~/js/Common/shortcutFive.js"></script>
    <script type="text/javascript" src="~/js/Common/naviRight.js"></script>
    <script type="text/javascript" src="~/js/Home/index/index.js"></script>

</body>
</html>
