<!--商品搜索页面-->
<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <!--引入tailwind-->
    <link href="https://unpkg.com/tailwindcss@@^2/dist/tailwind.min.css" rel="stylesheet">
    <link href="/css/Search/searchCommodity/searchCommodity.css" rel="stylesheet">
    <!--引入与导航栏有关的配置-->
    <link href="/css/Common/shortcut_five.css" rel="stylesheet">
    <!--搜索框-->
    <link href="/css/Search/searchBar.css" rel="stylesheet">
    <!--右边栏-->
    <link href="/css/Common/naviRight.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://www.jq22.com/jquery/font-awesome.4.7.0.css">
    <title>搜索结果-商品</title>
    @await Html.PartialAsync("~/Views/Shared/base.cshtml")
    @await Html.PartialAsync("~/Views/Shared/backToTop.cshtml")
</head>

<body>
    <!--右边栏-->
    <div id="naviRight">
        <naviright>

        </naviright>
    </div>
    <!--渲染导航栏-->
    <div id="shortcutlg">
        <shortcut></shortcut>
    </div>
    <!--搜索框部分-->
    <div id="search-bar">
        <searchbar></searchbar>
    </div>
    <!--筛选栏部分-->
    <div id="search-category" class="search-category">
        <el-menu :default-active="activeIndex" class="el-menu-demo" mode="horizontal" @@select="handleSelect">
            <el-menu-item index="1" onclick="setCommodDefault()">默认</el-menu-item>
            <el-submenu index="2">
                <template slot="title">
                    价格
                </template>
                <el-menu-item index="2-1" onclick="setCommodDesc()">价格从高到低</el-menu-item>
                <el-menu-item index="2-2" onclick="setCommodAsc()">价格从低到高</el-menu-item>
            </el-submenu>
            <el-menu-item index="3" onclick="setCommodByAmount()">销量</el-menu-item>
        </el-menu>
    </div>
    <!--商品部分-->
    <div class="commodities bg-gray-100 rounded-lg  border-opacity-0">
        <div id="commodity-list" class="commodity-list">
           <el-row>
               <el-col :span="7" v-for="(item, index) in goods" :key="index" :offset="index%3!==0? 1 : 0">
                  <div style="margin-top:20px; margin-bottom:20px ">
                     <el-card class="transition duration-150 ease-in-out transform hover:-translate-y-1 hover:border-2 hover:border-blue-700"
                                     :body-style="{ padding: '0px' }">
                        <img class="commodityImage" :src="goods[number].img" @@click="commodityDetial(item.ID)">
                        <div style="padding: 0px;">
                          <span class="intro">{{goods[number].intro}}</span>
                            <p class="price">￥{{goods[number++].price}}</p>
                        </div>
                     </el-card>
                  </div>
               </el-col>
           </el-row>
        </div>
    </div>

    <script type="text/javascript" src="/js/Common/shortcutFive.js"></script>
    <script type="text/javascript" src="/js/Common/naviRight.js"></script>
    <script type="text/javascript" src="/js/Search/searchBar.js"></script>
    <script type="text/javascript" src="/js/Search/searchCommodity/searchCommodity.js"></script>
</body>

</html>